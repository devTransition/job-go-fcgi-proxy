# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
